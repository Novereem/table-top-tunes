@using Shared.Models.DTOs

<div class="border-bottom border-end" style="width: 20vw; height: 80vh">
    <h3 class="text-center py-1 m-0">Action Sounds</h3>
    @if (AmbientSounds != null && AmbientSounds.Any())
    {
        <ul>
            @foreach (var sound in AmbientSounds)
            {
                <li>@sound.Name</li>
            }
        </ul>
    }
    else
    {
        <p class="text-center">No action sounds available.</p>
    }
</div>

@code {
    [Parameter]
    public List<AudioFileResponseDTO> AmbientSounds { get; set; }
}